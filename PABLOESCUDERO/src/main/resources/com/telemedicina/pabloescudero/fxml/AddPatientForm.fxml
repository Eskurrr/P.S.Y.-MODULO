<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.telemedicina.carolinabeatrice.controller.AddPatientController"
          hgap="10" vgap="10" alignment="CENTER" styleClass="add-patient-form">

    <Label text="Add New Patient" styleClass="form-title" GridPane.columnSpan="2"/>
    <Label text="Name"/>
    <TextField fx:id="nameField" promptText="Enter full name" GridPane.columnIndex="1"/>

    <Label text="Sex:"/>
    <ChoiceBox fx:id="sexChoiceBox" GridPane.columnIndex="1">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Male"/>
                <String fx:value="Female"/>
                <String fx:value="Other"/>
                </FXCollections>
        </items>
    </ChoiceBox>

    <Label text="Age:" />
    <TextField fx:id="ageField" promptText="Enter age" GridPane.columnIndex="1"/>

    <Label text="Email." />
    <TextField fx:id="emailField" promptText="Enter email" GridPane.columnIndex="1"/>

    <Label text="Diagnostic: "/>
    <TextField fx:id="diagnosticField" promptText="Enter diagnostic" GridPane.columnIndex="1"/>

    <Label text="Phone: "/>
    <TextField fx:id="phoneField" promptText="Enter phone number" GridPane.columnIndex="1"/>

    <Label text="Address: "/>
    <TextField fx:id="addressField" promptText="Enter address" GridPane.columnIndex="1"/>

    <Button text="Add Patient" fx:id="addPatientButton" onAction="#handleAddPatient" GridPane.columnSpan="2"
            styleClass="primary-button"/>

</GridPane>



